{% extends 'base.html.twig' %}

{% block title %}Acheter un bien{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(searchForm) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(searchForm.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(searchForm.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(searchForm.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <input type="text" placeholder="Adresse" value="" id="search_address" class="form-control">
                    </div>
                </div>
                <div class="col">
                    {{ form_row(searchForm.distance) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(searchForm) }}
        </div>
    </div>
    <div class="container mt-3">
        <h1 class="mt-3">Liste des biens</h1>

        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {% include "property/_property.html.twig" %}
                </div>
            {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>

    </div>
{% endblock %}
